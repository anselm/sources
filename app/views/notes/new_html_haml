%h1 = "Edit Media Source"

#map { :style="float:right;width:400px;height:400px;border:3px solid red;" }

%div = |
     results = [] |
        @note = Note.new |
        form_for(@note, :action => :create ) do |
          Note.get_marks.each do |mark| |
            if mark[:layout] == :banner |
              results << "<h1 class=header>#{mark[:name]}</h1>" |
            elsif mark[:layout] == nil |
              results << "<a href='javascript:void(0)' onclick='openpopup(0);' class='subhead_small_plain'>" |
              results << "#{mark[:name]}</a><br/>" |
              results << text_control(mark[:name], :size => 60, :class => "input_black") |
            elsif mark[:layout] == :big |
              results << "<a href='javascript:void(0)' onclick='openpopup(0);' class='subhead_small_plain'>" |
              results << "#{mark[:name]}</a><br/>" |
              results << text_area_control(mark[:name], :size => 60, :class => "input_black") |
            elsif mark[:layout] == :menu |
              results << "<a href='javascript:void(0)' onclick='openpopup(0);' class='subhead_small_plain'>" |
              results << "#{mark[:name]}</a><br/>" |
              results << select_control( mark[:name], :class => "pull_down_black", :collection => :mark[:tokens] ) |
              results << "<br/>" |
            elsif mark[:layout] == :buttons |
            else |
            end |
          end |
        end |
        results.join("\n") 

